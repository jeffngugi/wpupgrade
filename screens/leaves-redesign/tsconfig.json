{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    // You can enable other strict-related options individually if needed
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": [
    "./**/*.ts"
  ]
}